<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="dk.bec.poland.aa.logging.task_two.PersonalLoggerClass" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>


