<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">

            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>

        </Console>    </Appenders>
    <Loggers>
        <Logger  name="PersonalLoggerClass" level="trace">
            <AppenderRef ref="Console"/>
        </Logger >
        <Root level="info">
        <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>